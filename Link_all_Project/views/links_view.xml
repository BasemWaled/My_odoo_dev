<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_project_name_tree" model="ir.ui.view">
        <field name="name">project.name.tree</field>
        <field name="model">project.name</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="project_Name" string="Project Name"/>
                <field name="url"/>
                <field name="userName"/>
                <field name="password"/>
                <field name="project_Type"/>
                <field name="version"/>
            </tree>
        </field>
    </record>

    <record id="view_project_name_form" model="ir.ui.view">
        <field name="name">project.name.form</field>
        <field name="model">project.name</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="project_Name"/>
                            <field name="url"/>
                            <field name="project_Type"/>
                        </group>
                        <group>
                            <field name="userName"/>
                            <field name="password"/>
                            <field name="version"/>
                            <field name="active" invisible="1"/>
                        </group>
                    </group>
                </sheet>
                <!-- chatter_position -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_project_name_search" model="ir.ui.view">
        <field name="name">project.name.search</field>
        <field name="model">project.name</field>
        <field name="arch" type="xml">
            <search>
                <field name="project_Name" string="Project_Name"/>
                <field name="url"/>
                <field name="userName"/>
                <field name="project_Type"/>
                <field name="version"/>
                <filter name="filter_community" string="Community" domain="[('project_Type','=','community')]"/>
                <filter name="filter_enterprise" string="Enterprise" domain="[('project_Type','=','enterprise')]"/>
                <filter name="filter_archived" string="Archived" domain="[('active','=',False)]"/>
                <group expand="0" string="Group By">
                    <filter string="project_Type" name="Group_by_project_Type" context="{'group_by':'project_Type'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_project_name" model="ir.actions.act_window">
        <field name="name">links</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">project.name</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first URL project!
            </p>
        </field>
    </record>

    <menuitem id="menu_links"
              name="links"
              action="action_project_name"
              parent="menu_links_master"
              sequence="0"/>


</odoo>